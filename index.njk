<ul style="list-style-type:none;">
    {% for post in posts %}
    <li style="line-height:2em">
        <a href="{{ post.url | url }}" style="display:inline-block; width:15em; font-size:21px">{{ post.data.title }}</a>
        <time datetime="{{ post.date | dateIso }}" style="font-family:sans-serif; font-size:9pt;">{{ post.date | dateReadable }}</time>
    </li>
    {% endfor %}
</ul>